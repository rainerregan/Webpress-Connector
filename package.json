    "lint:fix": "eslint --ext .ts,.tsx --ignore-pattern node_modules --fix .",
    "build": "webpack --mode production",
    "watch": "webpack --mode development --progress --watch",
    "dev": "webpack-dev-server --config ./webpack.config.js --hot"
